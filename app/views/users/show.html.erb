<h1>User Profile </h1>

<h4><%= @user.username %></h4><br>
<p><%= @user.first_name %></p><br>
<p><%= @user.last_name %></p>
<p><%= @user.age %></p><br>
<p><%= @user.country %></p><br>
<h4> Reviews: 
    <ul>
        <% @user.reviews.each do |review| %>
        <li><%= "#{review.description} | #{review.rating}" %></li>
        <% end %>
    </ul>
</h4>

<p><%= link_to "Sign Out", logout_path, method: :post %></p>
<button style="text-decoration: none"><%= link_to "Go to Search Bar", home_path %></button>

