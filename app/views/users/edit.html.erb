<h1 style="text-align:center">Who dis? </h1>


<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p style="color:red"><%= error %></p>
    <% end %>
<% end %>

<h4 style="text-align:center"><%= form_for @user, controller: 'users', action: 'create' do |f| %><br>
<%= f.label :first_name %>
<%= f.text_field :first_name %><br><br>

<%= f.label :last_name %>
<%= f.text_field :last_name %><br><br>

<%= f.label :username %>
<%= f.text_field :username %><br><br>

<%= f.label :password %>
<%= f.password_field :password %><br><br>

<%= f.label :password_confirmation, "Confirm PWD" %>
<%= f.password_field :password_confirmation %><br><br>

<%= f.label :email %>
<%= f.text_field :email %><br><br>

<%= f.label :age %>
<%= f.number_field :age %><br><br>

<%= f.label :country %>
<%= f.text_field :country %><br><br>

<%= f.label :img_url %>
<%= f.text_field :img_url %><br><br>
<br>
<%= f.submit "Update", data: {confirm: 'Are you sure?'} %></h4>
<% end %>
