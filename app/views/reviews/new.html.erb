<h1>New Review </h1>

<% if logged_in? %>
    <%= form_for @review do |f| %>
    <%= f.label :rating %>
    <%= f.number_field :rating, min: 1, max: 5 %><br>

    <%= f.label :description %>
    <%= f.text_field :description %><br>

    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :username %><br>

    <%= f.label :recording_id %>
    <%= f.collection_select :recording_id, Recording.all, :id, :link %>

    <%= f.submit "Create Review" %>
    <% end %>
    <br>
    <p><%= link_to "See all your reviews", reviews_path %></p>
    <br>
    <li> <%= link_to "logout", logout_path, method: :delete %> </li>
<% else %>
    <li><%= link_to "Sign Up to review", new_user_path %></li>
    <li ><%= link_to "Sign In to review", new_login_path %></li>
    <% end %>



