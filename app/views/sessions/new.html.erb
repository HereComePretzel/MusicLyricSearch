<h1>Sign In </h1>

<ul>
    <% if flash[:error] %>
        <li style="color:red"><%= flash[:error] %></li>
    <% end %>
</ul>

<%= form_for :session, url: login_path, method: :post do |f| %>
<%= f.label :username %>
<%= f.text_field :username %><br>
<%= f.label :password %>
<%= f.password_field :password %><br>
<%= f.submit "log in" %>
<% end %>

<p><%= link_to "Search Bar", home_path %></p>